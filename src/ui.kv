#:kivy 2.0.0

Widget:
    GridLayout:
        cols: 2
        padding: 15
        spacing: 15
        size: root.width, root.height

        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.5
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Receiver parameters"
                font_size: 28
                size: self.texture_size
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: root.height * 0.1
                size_hint: 0.8, 1

                MDLabel:
                    text: "Sample rate"
                    font_size: 18

                MDTextField:
                    id: sample_rate
                    hint_text: "Default = 2400000"
                
                MDLabel:
                    text: "FFT resolution"
                    font_size: 18
                
                MDTextField:
                    id: fft_res
                    hint_text: "Default = 11"
                
                MDLabel:
                    text: "PPM offset"
                    font_size: 18
                
                MDTextField:
                    id: ppm_offset
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Amount of FFT"
                    font_size: 18
                
                MDTextField:
                    id: fft_num
                    hint_text: "Default = 1000"
                
        
        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.5
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Observer parameters"
                font_size: 28
                size: self.texture_size
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: root.height * 0.1
                size_hint: 0.8, 1

                MDLabel:
                    text: "Latitude"
                    font_size: 18
                
                MDTextField:
                    id: latitude
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Longitude"
                    font_size: 18
                
                MDTextField:
                    id: longitude
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Azimuth"
                    font_size: 18
                
                MDTextField:
                    id: azimuth
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Altitude"
                    font_size: 18
                
                MDTextField:
                    id: altitude
                    hint_text: "Default = 0"

        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.28
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "RTL-TCP"
                size: self.texture_size
                font_size: 28
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 3
                row_force_default: True
                row_default_height: root.height * 0.1
                size_hint: 0.8, 1

                MDLabel:
                    text: "Host server"
                    font_size: 18
                
                MDCheckbox:
                    id: host
                    on_active: app.checkboxChecked(self, "host", self.active)
                
                Widget:
                    hint_size: 1, None
                
                MDLabel:
                    text: "Client"
                    font_size: 18
                
                MDCheckbox:
                    id: client
                    on_active: app.checkboxChecked(self, "client", self.active)
                
                MDTextField:
                    id: client_ip
                    hint_text: "IP of remote host"

        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.28
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Misc"
                size: self.texture_size
                font_size: 28
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: root.height * 0.1
                size_hint: 0.8, 1

                MDLabel:
                    text: "Median smoothing"
                    font_size: 18
                
                MDTextField:
                    id: median
                    hint_text: "Default = 3"
                
                MDLabel:
                    text: "Degree interval"
                    font_size: 18
                
                MDTextField:
                    id: degree_interval
                    hint_text: "Default = 0"
    
    
    
    
    
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, None
        width: root.width
        padding: 15
        spacing: 15
        
        MDCard:
            orientation: "horizontal"
            size_hint: 1, 0.8
            size: root.size
            pos_hint: {"center_x": 0.5}
            spacing: 15
            elevation: 10
            padding: 15

            MDFillRoundFlatButton:
                text: "[color=#000000]Get command[/color]"
                md_bg_color: 0, 0.5, 0, 1
                pos_hint: {"center_y": 0.5}
                on_release: app.getCommand()
                
            MDLabel:
                id: command
                italic: True
                text: "No command yet"
                font_size: 16

            MDIconButton:
                icon: "content-copy"
                pos_hint: {"center_y": 0.5}
                on_release: app.copyCommand()

            MDFillRoundFlatButton:
                text: "[color=#000000]RUN[/color]"
                md_bg_color: 0, 0.5, 0, 1
                pos_hint: {"center_y": 0.5}
                on_release: app.runObservation()