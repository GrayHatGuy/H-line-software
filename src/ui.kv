#:kivy 2.0.0

Widget:
    GridLayout:
        cols: 2
        padding: 15
        spacing: 15
        size: root.width, root.height

        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.4
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Receiver parameters"
                font_size: 28
                size: self.texture_size
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: root.height * 0.08
                size_hint: 0.8, 1

                MDLabel:
                    text: "Sample rate"
                    font_size: 18

                MDTextField:
                    id: sample_rate
                    hint_text: "Default = 2400000"
                
                MDLabel:
                    text: "FFT resolution"
                    font_size: 18
                
                MDTextField:
                    id: fft_res
                    hint_text: "Default = 11"
                
                MDLabel:
                    text: "PPM offset"
                    font_size: 18
                
                MDTextField:
                    id: ppm_offset
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Amount of FFT"
                    font_size: 18
                
                MDTextField:
                    id: samples
                    hint_text: "Default = 1000"
                
        
        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.4
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Observer parameters"
                font_size: 28
                size: self.texture_size
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: root.height * 0.08
                size_hint: 0.8, 1

                MDLabel:
                    text: "Latitude"
                    font_size: 18
                
                MDTextField:
                    id: latitude
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Longitude"
                    font_size: 18
                
                MDTextField:
                    id: fft_res
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Azimuth"
                    font_size: 18
                
                MDTextField:
                    id: azimuth
                    hint_text: "Default = 0"
                
                MDLabel:
                    text: "Altitude"
                    font_size: 18
                
                MDTextField:
                    id: altitude
                    hint_text: "Default = 0"

        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.25
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "RTL-TCP"
                size: self.texture_size
                font_size: 28
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 3
                row_force_default: True
                row_default_height: root.height * 0.08
                size_hint: 0.8, 1

                MDLabel:
                    text: "Host server"
                    font_size: 18
                
                MDCheckbox:
                    id: host
                
                Widget:
                    hint_size: 1, None
                
                MDLabel:
                    text: "Client"
                    font_size: 18
                
                MDCheckbox:
                    id: client
                
                MDTextField:
                    id: client_ip
                    hint_text: "IP of remote host"

        MDCard:
            orientation: "vertical"
            padding: 10
            elevation: 10
            size_hint: None, None
            size: root.width * 0.48, root.height * 0.25
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Misc"
                size: self.texture_size
                font_size: 28
                bold: True
                color: 0,0.5,0,1
                halign: 'center'
                size_hint: 1, None
            
            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: root.height * 0.08
                size_hint: 0.8, 1

                MDLabel:
                    text: "Median smoothing"
                    font_size: 18
                
                MDTextField:
                    id: median_smoothing
                    hint_text: "Default = 3"
                
                MDLabel:
                    text: "Degree interval"
                    font_size: 18
                
                MDTextField:
                    id: degree_interval
                    hint_text: "Default = 0"
    
    
    
    
    
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, None
        width: root.width
        padding: 15
        spacing: 15

        MDFillRoundFlatButton:
            text: "[color=#000000]Get command[/color]"
            md_bg_color: 0, 0.5, 0, 1
        
        Widget:
            width: root.width
            
        MDTextField:
            id: command
            size_hint: None, 1
            width: root.width * 0.6
            text: "No command yet"

        MDFillRoundFlatButton:
            text: "[color=#000000]RUN[/color]"
            md_bg_color: 0, 0.5, 0, 1